# Define the required dependencies for the Just the Docs theme
source "https://rubygems.org"
gem "github-pages"
gem "just-the-docs"

# Set the theme to Just the Docs
remote_theme "pmarsceill/just-the-docs"

# Exclude certain files and directories
exclude:
  - Gemfile
  - Gemfile.lock
  - vendor
  - node_modules
  - _site
  - .jekyll-cache
  - .sass-cache

# Configure the site settings
title: "My Site"
description: "A site built with Just the Docs theme"
